{
  "encoding": {
    "mode": "hardware",
    "quality": 45,
    "crf": 22,
    "preset": "medium",
    "bit_depth": 8,
    "hdr": false
  },
  "paths": {
    "output": "~/Videos/Converted",
    "processed": "~/Videos/Processed",
    "failed": "~/Videos/Failed"
  },
  "automation": {
    "enabled": false,
    "schedule": "daily",
    "time": "03:00"
  },
  "photos": {
    "include_albums": [],
    "exclude_albums": ["Screenshots"],
    "download_from_icloud": true
  },
  "processing": {
    "max_concurrent": 2,
    "validate_quality": true,
    "preserve_original": true,
    "move_processed": false,
    "move_failed": false,
    "check_disk_space": true,
    "min_free_space_gb": 1.0
  },
  "vmaf": {
    "enabled": false,
    "threshold": 93.0,
    "sample_interval": 30,
    "fail_action": "warn"
  },
  "notification": {
    "on_complete": true,
    "on_error": true,
    "daily_summary": false
  }
}
